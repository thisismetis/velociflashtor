<h2><%= @deck.name %>:</h2>
<% @cards.each_with_index do |card, index| %>
  <%= div_for card, style: "display: none", data: { index: index } do %>
    <div class="front" style="display: none">
      <p> <%= card.front %></p>
      <%= image_tag card.image_url, size: "100x100" %>
    </div>
    <div class="back" style="display: none">
      <p><%= card.back %></p>
    </div>
  <% end %>
<% end %>

<button id="previous-button">Previous</button>
<button id="flip-button">Flip</button>
<button id="next-button">Next</button>
<%= button_to 'Finished', deck_path(@deck), form_class: 'finished-button', method: :get %>

<script>
  var max = <%= @cards.length - 1 %>;
</script>
